!!!
%html
  %head
    %title Reijiro
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar
      .navbar-inner
        .container
          %a.brand{:href => "/"} Reijiro
          %ul.nav
            %li
              = link_to "Next", next_path
            %li{:class => "dropdown"}
              %a{:href => "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}}
                Pick
                %b{:class => "caret"}
              %ul{:class => "dropdown-menu"}
                %li
                  = link_to "RANDOM", picknew_path
                - (1..12).each do |l|
                  = link_to "LEVEL #{l}", picknew_path(l)
            %li
              = link_to "Clips (#{Clip.undone.count}/#{Clip.count})", clips_path
            %li
              = due_stats_button
            %li
              = link_to "Words (#{Word.count})", words_path
            %li
              %form{class: 'navbar-search pull-left', action: '/search/', method: 'get'}
                %input{id: 'query', name: 'query', type: 'text', class: 'search-query', placeholder: 'Search'}

    .container
      = yield
