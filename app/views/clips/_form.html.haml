= form_for @clip do |f|
  -if @clip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@clip.errors.count, "error")} prohibited this clip from being saved:"
      %ul
        - @clip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :word_id
    = f.number_field :word_id
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :nextup
    = f.check_box :nextup
  .field
    = f.label :shown
    = f.number_field :shown
  .actions
    = f.submit 'Save'
