#word
  %ul
    %li{id: "level"}
      Level:
      = @word.level
    %li{id: "shown"}
      Last checked:
      = "#{time_ago_in_words(@word.clip.updated_at)} ago" if @word.clip

  - unless Clip.where(word_id: @word.id).first
    = form_for Clip.new(shown: 1, word_id: @word.id) do |f|
      = f.hidden_field :word_id
      = f.hidden_field :status
      = f.hidden_field :shown
      = f.hidden_field :nextup
      = f.submit 'Clip this!'

  #entry
    = @word.entry
  %div.next.btn.btn-primary Check and proceed
  = link_to "Edit", edit_word_path(@word), class: 'btn'
  = link_to "Delete", @word, class: 'btn', confirm: "Delete #{@word.entry}?", method: :delete
  %p

  - if @word.clip
    #status-digit
      = @word.clip.status
    #status
      .btn-group
        = status_button "New", 0
        = status_button "1 Day", 1
        = status_button "3 Days", 2
        = status_button "1 Week", 3
        = status_button "2 Weeks", 4
        = status_button "1 Month", 5
        = status_button "2 Months", 6
        = status_button "4 Months", 7
        = status_button "Done", 8

  %p
    = highlight simple_format(@word.definition), @word.entry

    %div.next.btn.btn-primary Check and proceed
    %a{href: "javascript:scroll(0,0)", class: 'btn'} Back to top
