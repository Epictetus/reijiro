#word
  %ul
    %li#level
      Level:
      = @word.level
    %li#shown
      Last checked:
      = "#{time_ago_in_words(@word.clip.updated_at)} ago" if @word.clip
    %li#google-link
      = link_to "Google", "https://www.google.com/search?hl=en&q=%22#{@word.entry}%22", target: '_blank'
    %li#google-link
      = link_to "Pronunciation", "https://www.google.com/search?hl=en&q=#{@word.entry} pronunciation", target: '_blank'
    %li#google-link
      = link_to "Wiktionary", "https://www.google.com/search?hl=en&q=#{@word.entry} wiktionary", target: '_blank'
    %li#google-link
      = link_to "NYT", "https://www.google.com/search?hl=en&q=#{@word.entry}+site%3Anytimes.com", target: '_blank'

  - unless Clip.where(word_id: @word.id).first
    = form_for Clip.new(shown: 1, word_id: @word.id) do |f|
      = f.hidden_field :word_id
      = f.hidden_field :status
      = f.hidden_field :shown
      = f.hidden_field :nextup
      = f.submit 'Clip this!'

  #entry
    = @word.entry

  - if params[:action] == "next"
    %div.btn.btn-large#show show

  #body
    %div.next.btn.btn-primary.btn-large Check and proceed
    = link_to "Edit", edit_word_path(@word), class: 'btn'
    = link_to "Delete", @word, class: 'btn', confirm: "Delete #{@word.entry}?", method: :delete
    %p

    - if @word.clip
      #status-digit
        = @word.clip.status
      #status
        .btn-group
          = status_button "New", 0
          = status_button "1 Day", 1
          = status_button "3 Days", 2
          = status_button "1 Week", 3
          = status_button "2 Weeks", 4
          = status_button "1 Month", 5
          = status_button "2 Months", 6
          = status_button "4 Months", 7
          = status_button "Done", 8

    #thesaurus
      - if @word.thesaurus
        =raw @word.thesaurus
      .link
        = link_to 'Thesaurus.com', 'http://thesaurus.com/'

    #definition
      = raw(preprocess @word)

      %div.next.btn.btn-primary Check and proceed
      %a{href: "javascript:scroll(0,0)", class: 'btn'} Back to top
